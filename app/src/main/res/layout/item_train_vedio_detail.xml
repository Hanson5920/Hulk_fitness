<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_rl_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/left_right_margin"
    android:paddingLeft="@dimen/left_right_margin"
    android:paddingRight="@dimen/left_right_margin"
    android:paddingTop="@dimen/dp10">

    <ImageView
        android:id="@+id/item_img_train"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:src="@drawable/common_footer_shape_btn_pressed" />

    <TextView
        android:id="@+id/item_tv_train_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/item_img_train"
        android:padding="10dp"
        android:text="L字拉伸"
        android:textColor="@color/text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_tv_train_detail_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/item_tv_train_detail_title"
        android:gravity="center"
        android:padding="@dimen/dp10"
        android:text="1"
        android:textColor="@color/text_color_gray"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item_tv_train_detail_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_img_train"
        android:layout_alignLeft="@+id/item_tv_train_detail_title"
        android:padding="@dimen/dp10"
        android:text="3 x 10次"
        android:textColor="#333333"
        android:textSize="14sp" />

</RelativeLayout>