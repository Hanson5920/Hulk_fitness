<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rest_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alpha_60_white"
    android:visibility="gone">

    <ImageView
        android:id="@+id/rest_close"
        android:layout_width="@dimen/close_btn"
        android:layout_height="@dimen/close_btn"
        android:src="@mipmap/home_execise_btn_close"
        android:scaleType="center" />

    <RelativeLayout
        android:id="@+id/rest_time_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/play_bg_countdown">

        <TextView
            android:id="@+id/rest_time_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="@string/rest_countdown"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rest_next_action_layout"
        android:layout_below="@id/rest_time_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rest_next_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="腰肌拉伸"
            android:textSize="20dp"
            android:textColor="#333333"
            android:textStyle="bold"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/rest_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="26dp"
        android:src="@mipmap/home_execise_btn_last"/>

    <ImageView
        android:id="@+id/rest_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="33dp"
        android:src="@mipmap/home_execise_btn_next"/>

    <!--<TextView-->
        <!--android:layout_below="@id/rest_next_action_layout"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/click_space_to_skip_the_rest"-->
        <!--android:layout_marginTop="15dp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:visibility="gone"-->
        <!--android:textSize="16dp"-->
        <!--android:textColor="#7d7d7d" />-->

</RelativeLayout>
