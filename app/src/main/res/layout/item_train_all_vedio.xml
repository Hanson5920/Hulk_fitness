<?xml version="1.0" encoding="utf-8"?>
<com.gz.hkjs.app.widget.BGASwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sil_item_bgaswipe_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="11dp"
    android:paddingLeft="@dimen/left_right_margin"
    android:paddingRight="@dimen/left_right_margin">

    <LinearLayout
        android:background="@color/red"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_bgaswipe_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:text="移除"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout

        android:id="@+id/rl_root_train_all"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/item_train_all_img"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:src="@drawable/test" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home_mask" />

        <TextView
            android:id="@+id/item_train_all_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="这里有全面有效的训练视频"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/item_train_all_title"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_train_all_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lineSpacingExtra="3sp"
                android:paddingRight="@dimen/dp5"
                android:text="资深教练+详细讲解\n你可以根据自身情况挑选课程"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_train_all_energy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lineSpacingExtra="3sp"
                android:paddingLeft="@dimen/dp5"
                android:text="千卡"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/item_train_difficulty_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/home_icon_grade"/>

            <TextView
                android:id="@+id/item_train_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:text="初级"
                android:textSize="@dimen/sp12"
                android:rotation="-45"/>

        </RelativeLayout>

    </RelativeLayout>
</com.gz.hkjs.app.widget.BGASwipeItemLayout>